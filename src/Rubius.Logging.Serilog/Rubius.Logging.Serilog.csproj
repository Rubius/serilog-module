<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <Description>Serilog logging module with base configuration</Description>
        <TargetFrameworks>netstandard2.0;netstandard2.1;netcoreapp3.1;net5.0</TargetFrameworks>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <PackageId>Rubius.Logging.Serilog</PackageId>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <PackageIcon>logo_128x128.png</PackageIcon>
        <Authors>Donat Kolzenov</Authors>
        <Company>Rubius</Company>
        <PackageTags>rubius;serilog;logging;aspnetcore</PackageTags>
        <RepositoryType>git</RepositoryType>
        <RepositoryUrl>https://github.com/Rubius/serilog-module</RepositoryUrl>
        <Version>5.0.0</Version>
    </PropertyGroup>

    <ItemGroup>
      <None Include="..\..\README.md" Pack="true" PackagePath=""/>
      <None Include="..\..\assets\logo_128x128.png" Pack="true" PackagePath=""/>
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="Serilog.AspNetCore" Version="5.0.0" />
    </ItemGroup>

</Project>
